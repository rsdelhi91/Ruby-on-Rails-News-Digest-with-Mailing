<div class="panel panel-default">
  <div class="panel-heading"> Create A New User </div>
  <div class="panel-body">

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <h3> Tell us who you are! </h3>
      <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :firstname, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :lastname, class: 'form-control' %>
      </div>

      <h3> Pick a username and password! </h3>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
  

      <h3> Nearly There! </h3>

      <div class="form-group">
        <%= f.label :username %><br>
        <% if @current_user == nil %>
          <%= f.text_field :username, class: 'form-control' %>
        <% else %>
          <%= f.text_field :username, class: 'form-control', :readonly => true %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :bio %><br>
        <%= f.text_field :bio, class: 'form-control' %>
      </div>
      <% if @current_user != nil %>
        <div class="form-group">
          <%= f.label :interest_list %><br>
          <%= f.text_field :interest_list, class: 'form-control' %>
        </div>
        <div class="btn-group" data-toggle="buttons-radio">
          <%= f.label :do_you_want_to_subscribe? %><br>
          <%= f.radio_button :isSubscribed, true, { class: 'btn btn-primary' } %>
          <%= f.label :isSubscribed_true, "Yes" , { style: 'padding-left: 5px;' } %>
          <br>
          <%= f.radio_button :isSubscribed, false, { class: 'btn btn-primary' } %>
          <%= f.label :isSubscribed_false, "No" , { style: 'padding-left: 5px;' } %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>